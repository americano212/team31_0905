# AWS 설정
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
AWS_PROFILE=default

# Amazon Bedrock Nova 설정
BEDROCK_REGION=us-east-1
NOVA_IMAGE_MODEL_ID=amazon.nova-canvas-v1:0
NOVA_TEXT_MODEL_ID=amazon.nova-pro-v1:0

# 데이터베이스 설정
DYNAMODB_TABLE_PREFIX=nova-english-
DYNAMODB_ENDPOINT=https://dynamodb.us-east-1.amazonaws.com

# API 설정
API_GATEWAY_STAGE=dev
CORS_ORIGIN=http://localhost:3000
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# S3 설정
S3_BUCKET_NAME=nova-english-images
S3_REGION=us-east-1

# 로깅 설정
LOG_LEVEL=info
CLOUDWATCH_LOG_GROUP=/aws/lambda/nova-english

# 외부 서비스 설정
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# 개발 환경 설정
NODE_ENV=development
PORT=3001

# 모니터링 설정
ENABLE_XRAY=true
ENABLE_METRICS=true

# 보안 설정
ENCRYPTION_KEY=your-encryption-key-here
SALT_ROUNDS=12

# 이메일 설정 (선택사항)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 소셜 로그인 설정 (선택사항)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# 게임 설정
DEFAULT_GAME_TIME_LIMIT=300
MAX_CONVERSATION_LENGTH=50
IMAGE_GENERATION_TIMEOUT=30000

# 캐싱 설정
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# 비용 관리
DAILY_NOVA_REQUEST_LIMIT=1000
MONTHLY_BUDGET_ALERT=100